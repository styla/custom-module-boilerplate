{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": [
            "es7",
            "dom",
            "esnext"
        ],
        "outDir": "build",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "rootDir": "./",
        "typeRoots": [
            "./types",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "stories",
        "build",
        "utils",
        "webpack.config.js"
    ]
}
