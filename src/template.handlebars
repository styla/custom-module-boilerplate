<div class="customHeader">
    <div class="logoContainer">
        <img src="{{ content.logoUrl }}" />
    </div>

    <div class="linksContainer">
        <ul>
            {{#each content.links }}
                <li>
                    <a href="{{ url }}">{{ title }}</a>
                </li>
            {{/each}}
        </ul>
    </div>

    {{#if settings.showCart }}
        <div class="cartContainer">
            {{#eq settings.cartIcon 'cart' }}
                <img src="https://static-cdn.styla.com/custom-modules-demo/shopping-cart-solid.svg" />
            {{/eq}}
            {{#eq settings.cartIcon 'basket' }}
                <img src="https://static-cdn.styla.com/custom-modules-demo/shopping-basket-solid.svg" />
            {{/eq}}
        </div>
    {{/if}}

    <div data-overlay-visible="no" class="cartOverlay">
        <div class="cartContent">cart content goes here</div>
    </div>

</div>


<style>
.customHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.customHeader .logoContainer {
    max-width: {{settings.logoMaxWidth}}px;
    flex-basis: 30%;
}

.customHeader .logoContainer img {
    width: 100%;
    height: auto;
}

.customHeader .linksContainer ul {
    list-style-type: none;
}

.customHeader .linksContainer li {
    display: inline-block;
}

.customHeader .linksContainer li a {
    color: #000;
    font-family: Arial, Helvetica, sans-serif;
    text-transform: uppercase;
    font-size: 13px;
    text-decoration: none;
    font-weight: bold;
    margin: 0 {{settings.linksSpacing}}px;
}

.customHeader .linksContainer li a:hover {
    text-decoration: underline;
}

.customHeader .cartContainer {
    max-width: 30px;
}

.customHeader .cartContainer img {
    width: 100%;
    height: auto;
    cursor: pointer;
}

.customHeader .cartOverlay {
    position: absolute;
    width: 200px;
    height: 200px;
    background-color: #000;
    right: 0;
    top: 50px;
    border-radius: 5px;
    box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
}

.customHeader .cartOverlay .cartContent {
    font-family: Arial, Helvetica, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    font-size: 12px;
    color: #fff;
}

.customHeader .cartOverlay[data-overlay-visible="yes"] {
    opacity: 1;
}

</style>
